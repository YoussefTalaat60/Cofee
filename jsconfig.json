{
  "compilerOptions": {
    "checkJs": false,
    "jsx": "react-jsx",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "noImplicitAny": true,
    "baseUrl": "src",
    "resolveJsonModule": true,
    "lib": ["es6", "dom", "es2017"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}

